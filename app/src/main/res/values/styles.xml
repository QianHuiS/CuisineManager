<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 隱藏StatusBar&ActivityBar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--改為btcontent_big/mini (bt尺寸字設定_大小類) +
    btimage_功能類用途 (fridge/recipe/cuisine bt圖片設定_功能類)
        selector_功能類用途.xml-->
    <style name="bt_big">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_fclickbt_big</item>  <!--待刪-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bt_mini">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_fclickbt_mini</item>  <!--待刪-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bt_date">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/selector_fdatebt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">yyyy/mm/dd</item>
    </style>

    <style name="item_foodgv">
        <item name="android:background">@drawable/selector_ffitem</item>
    </style>

    <style name="item_speciegv">
        <item name="android:background">@drawable/selector_fsitem</item>
    </style>

    <style name="item_simagegv">
        <item name="android:background">@drawable/selector_fsimgitem</item>
    </style>

    <style name="item_recipelv">
        <item name="android:background">@drawable/selector_rritem</item>
    </style>

    <style name="bt_foodgv1">
    <item name="android:layout_width">60dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:background">@drawable/selector_fclickbt_foodgv1</item>  <!--待刪-->
    <item name="android:textSize">14sp</item>
</style>

    <style name="bt_foodgv2">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_fclickbt_foodgv2</item>  <!--待刪-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bt_foodgv3">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_fclickbt_foodgv3</item>  <!--待刪-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bt_recipelv1">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_rclickbt_recipelv1</item>  <!--待刪-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bt_recipelv2">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_rclickbt_recipelv2</item>  <!--待刪-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bt_recipelv3">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_rclickbt_recipelv3</item>  <!--待刪-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bt_cookstep">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/selector_rclickbt_cookstep</item>  <!--待刪-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_headline">
        <item name="android:background">@drawable/fridge_title</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="et_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="rg_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
