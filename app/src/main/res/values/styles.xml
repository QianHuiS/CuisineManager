<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 隱藏StatusBar&ActivityBar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="bt_big">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/calculator_key_ok</item>  <!--待刪-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bt_mini">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/calculator_key_ok</item>  <!--待刪-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="fridge_bt">
        <item name="android:background">@drawable/calculator_key_ok</item>
    </style>

    <style name="tv_headline">
        <item name="android:background">@drawable/category_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="et_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_titlec">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_contentc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
